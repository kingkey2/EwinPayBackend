                            <button onclick="contentcancel2()" type="button" class="btn btn-primary btn-round waves-effect">取消</button>
                            </div>
                            </div>
                            </div>
                            </div>`;
        $('body').append(addIPTable);

        $('#btnadd').click(function () {
            if (selectVal == -1) {
                parent.warningAlert("尚未选择商户");
            } else {
                $('#IPModal_CompanyName').text(selectText);
                $('#IPModal_IP').val('');
                
                $('#IPModal').modal('show');
            }

        });
    };

    function showImageScale(doc) {
        var src = $(doc).attr("src");
        var imgScale = document.getElementById("imgScale");
        var idImgScale_Image = document.getElementById("idImgScale_Image");

        idImgScale_Image.src = src;
        imgScale.style.display = "block";
    }

    function btnClose() {
        document.getElementById('imgScale').style.display = 'none';
    }

    function saveIP() {
        var IP = $('#IPModal_IP').val().trim();
        var companyID = selectVal;
        if (IP == "") {
            parent.warningAlert("IP不得为空");
            return;
        } else {
            api.insertBackendIP(companyID, IP, function (success, obj) {
                parent.wrapperFadeIn();
                if (success) {
                    parent.wrapperFadeOut();
                    if (obj.ResultCode == 0) {
                        parent.successAlert(function () {
                            contentcancel2();
                            getIPresult();
                        });        
                    } else {
                        var message = ""
                        switch (obj.ResultCode) {
                            case 6:
                                message = "其他错误";
                                parent.warningAlert(message);
                                break;
                            case 8:
                                message = "资料已存在";
                                parent.warningAlert(message);
                                break;
                            case 7:
                                parent.errorAlert("您已断线请重新登入", "Login.cshtml");
                                break;
                            default:
                                message = "其他错误";
                                parent.warningAlert(message);
                                break;
                        }
                    }

                } else {
                    parent.wrapperFadeOut();
                    parent.warningAlert("系统有误");
                }
               
            });
        }

    }

    function deleteIP(doc) {
        var IP = $(doc).data('withdrawalip');
        var companyID = $(doc).data('companyid');
        if (IP == "") {
            parent.warningAlert("IP不得为空");
            return;
        } else {
            api.deleteBackendIP(companyID, IP, function (success, obj) {
                parent.wrapperFadeIn();
                if (success) {
                    parent.wrapperFadeOut(); 
                    if (obj.ResultCode == 0) {
                        parent.successAlert(function () {
                            getIPresult();
                        });
                    } else {
                        var message = ""
                        switch (obj.ResultCode) {
                            case 6:
                                message = "删除失败";
                                parent.warningAlert(message);
                                break;
                            case 7:
                                parent.errorAlert("您已断线请重新登入", "Login.cshtml");
                                break;
                            default:
                                message = "其他错误";
                                parent.warningAlert(message);
                                break;
                        }
                    }

                } else {
                    parent.wrapperFadeOut();
                    parent.warningAlert("系统有误");
                }

            });
        }

    }

    function contentcancel2() {
        $('#IPModal').modal('hide');
    }

    function pictureChange(input) {
        
        if (input.files && input.files[0]) {
            if (Math.round(input.files[0].size / (1024 * 1024)) > 2) {
                parent.warningAlert("档案大小必须小于 2 MB");
                return false;
            }

            let reader = new FileReader();

            reader.readAsDataURL(input.files[0]);
            //將圖片轉成byte存下來供儲存用
            reader = new FileReader();
            reader.readAsArrayBuffer(input.files[0]);
            reader.onload = function (e) {

                var byteCurrencyPicture = e.target.result;
                var companyID = selectVal;
                var ip = $(input).data('ip');
                var type = $(input).data('type');
                var imageID = $(input).data('imageid');
                var imageData = Array.from(new Uint8Array(byteCurrencyPicture));
                var imageName = $(input).val().split("\\").pop().split(".").pop();
                $(input).parent().find('img').attr('src', e.target.result);
          
                api.updateBackendIPimg(imageData, imageName, ip, companyID, type, imageID, function (success, obj) {
                    if (success) {
                        if (obj.ResultCode == 0) {
                            parent.successAlert(function () {      
                                getIPresult();
                            });    
                        } else {
                            switch (obj.ResultCode) {
                                case 4:
                                    parent.errorAlertCallback("权限不足", function () {
                                        parent.ChangePage("Home");
                                        parent.CloseActivePage(window.frameElement.id.split('_')[1]);
                                    });
                                    break;
                                case 6:
                                    message = "其他错误";
                                    parent.warningAlert(message);
                                    break;
                          
                                case 7:
                                    parent.errorAlert("您已断线请重新登入", "Login.cshtml");
                                    break;
                                default:
                                    message = "其他错误";
                                    parent.warningAlert(message);
                                    break;
                            }
                        }
                    }
                })
            }
        }
    }

    function createTable() {
        Table = $("#table_Table").DataTable({
            data: [],
            columns: [
                { "title": "商户", "data": "CompanyName" },
                { "title": "IP", "data": "withdrawalIP" },
                {
                    "title": "图片", "data": "ImageName", render: function (data, display, rowdata) {
                        if (rowdata.ImageName != null) {
                            var tmpHtml = '';
                            var imageNames = rowdata.ImageName.split(",").sort(function (a, b) {
                                var a_arr = a.split("_");
                                var a_date = a_arr[a_arr.length - 1];
                                var b_arr = b.split("_");
                                var b_date = b_arr[b_arr.length - 1];
                                return new Date(b_date) - new Date(a_date)
                            });
                            for (var i = 0; i < imageNames.length; i++) {
                                var imageName_arr = imageNames[i].split("_");
                                ImageID = imageName_arr[0];
                                ImageName = imageName_arr[1];
                                CreateDate = imageName_arr[2];

                                if (i == 0) {
                                    tmpHtml += '<i data-imageid="' + ImageID + '" data-ip="' + rowdata.withdrawalIP + '" class="zmdi zmdi-plus" style="margin-top: 7px;margin-right: 5px;" onclick="addImage(this)"></i><input data-type="update" onchange="pictureChange(this)"  data-imageid="' + ImageID + '"  data-ip="' + rowdata.withdrawalIP + '" type="file" style="border-radius:0px;border:0px;"  accept="image/gif, image/jpeg, image/png" /><span class="span_CreateDate" style="margin-right:10px">' + CreateDate + '</span><img onclick="showImageScale(this)"  src = "/Backend/GetFileFromSharedFolder.cshtml?FileType=BackendWithdrawalIP&FileName=' + ImageName + '" style = "height: 50px" /><button style="margin-left:10px" data-imageid="' + ImageID + '" onclick="deleteImage(this)">删除</button>';
                                } else {
                                    tmpHtml += '<br/><input data-type="update" onchange="pictureChange(this)" data-imageid="' + ImageID + '"  data-ip="' + rowdata.withdrawalIP + '" type="file" style="border-radius:0px;border:0px;"  accept="image/gif, image/jpeg, image/png" /><span class="span_CreateDate" style="margin-right:10px">' + CreateDate + '</span><img  onclick="showImageScale(this)"  src = "/Backend/GetFileFromSharedFolder.cshtml?FileType=BackendWithdrawalIP&FileName=' + ImageName + '" style = "height: 50px" /><button style="margin-left:10px" data-imageid="' + ImageID + '" onclick="deleteImage(this)">删除</button>';
                                }
                            }
                            return tmpHtml;
                        } else {
                            return '<i class="zmdi zmdi-plus" style="margin-top: 7px;margin-right: 5px;"  onclick="addImage(this)"></i><input  data-type="create" onchange="pictureChange(this)" data-ip="' + rowdata.withdrawalIP + '" type="file" style="border-radius:0px;border:0px;"  accept="image/gif, image/jpeg, image/png" /><img src = "/Backend/GetFileFromSharedFolder.cshtml?FileType=BackendWithdrawalIP&FileName="" style = "height: 50px" />';
                        }
                    }
                },
                {
                    "title": "功能", "data": "forCompanyID",
                    "render": function (data, display, rowdata) {
                        return '<button data-withdrawalip="' + rowdata.withdrawalIP + '" data-companyid="' + data +'" onclick="deleteIP(this)">删除</button>';
                    }
                }
            ],
            rowCallback: function (row, data) { },
            filter: true,
            info: false,
            ordering: true,
            processing: true,
            retrieve: true,
            autoWidth: false,
            language: chineseTableLang
        });
    }


    function deleteImage(doc) {
        var ImageID = $(doc).data('imageid');

        if (!ImageID) {
            parent.successAlert(function () {
                getIPresult();
            });
        } else {
            api.deleteImage(ImageID, function (success, obj) {
                parent.wrapperFadeIn();
                if (success) {
                    parent.wrapperFadeOut();
                    if (obj.ResultCode == 0) {
                        parent.successAlert(function () {
                            getIPresult();
                        });
                    } else {
                        var message = ""
                        switch (obj.ResultCode) {
                            case 6:
                                message = "删除失败";
                                parent.warningAlert(message);
                                break;
                            case 7:
                                parent.errorAlert("您已断线请重新登入", "Login.cshtml");
                                break;
                            default:
                                message = "其他错误";
                                parent.warningAlert(message);
                                break;
                        }
                    }

                } else {
                    parent.wrapperFadeOut();
                    parent.warningAlert("系统有误");
                }

            });
        }

    }

    function addImage(obj) {
        var ip = $(obj).data('ip');
        $(obj).parent().append('<br/><input  data-type="create" onchange="pictureChange(this)" data-ip="' + ip + '" type="file" style="border-radius:0px;border:0px;"  accept="image/gif, image/jpeg, image/png" /><span class="span_CreateDate" style="margin-right:5px"></span><img  src = "/Backend/GetFileFromSharedFolder.cshtml?FileType=BackendWithdrawalIP&FileName="" style = "height: 50px" />');
    }

    function getIPresult() {

        api.getBackendIPresult(selectVal, function (success, obj) {
            Table.clear().draw();
            if (obj.ResultCode == 0) {
                Table.rows.add(obj.Result).draw(); // Add new data
                parent.wrapperFadeOut();
            } else {
                var message = ""
                switch (obj.ResultCode) {
                    case 5:
                        //message = "没有资料";
                        //parent.warningAlert(message);
                        break;
                    case 7:
                        parent.errorAlert("您已断线请重新登入", "Login.cshtml");
                        break;
                    default:
                        message = "其他错误";
                        parent.warningAlert(message);
                        break;
                    case 7:
                        parent.errorAlert("您已断线请重新登入", "Login.cshtml");
                        break;
                }
                parent.wrapperFadeOut();

            }
        });
    }

    function CreateCompanySelect() {

        $('#select_company').html("");
        api.getCompanyTableResult(function (s, o) {
            if (s) {
                if (o.ResultCode == 0) {
                    $("#select_company").append('<option value="-99">选择商户</option>');
                    $.each(o.CompanyResults, function (i, item) {
                        $("#select_company").append('<option value="' + o.CompanyResults[i].CompanyID + '">' + o.CompanyResults[i].CompanyName + '</option>');
                    })

                    $('#select_company').change(function () {
                        selectText = $("#select_company option:selected").text();
                        selectVal = $(this).val();
                        getIPresult();
                    });
                    $('#select_company').selectpicker('refresh');

                } else {
                    switch (o.ResultCode) {
                        case 4:
                            parent.errorAlertCallback("权限不足", function () {
                                parent.ChangePage("Home");
                                parent.CloseActivePage(window.frameElement.id.split('_')[1]);
                            });
                            break;
                        case 5:
                            break;
                        case 7:
                            parent.errorAlert("您已断线请重新登入", "Login.cshtml");
                            break;
                        default:
                            parent.warningAlert("其他错误");
                            break;
                    }
                }
                //消除遮罩
                parent.wrapperFadeOut();
            }
        });

    }

</script>
